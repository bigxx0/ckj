/* components/calendar/calendar.wxss */

.container
{
    display: flex;
    padding: 10px;
}


.selectTopTime
{
    width: 70%;
    /* border: 1px solid red; */
    display: flex;
    justify-content: center;
    text-align: center;
    line-height: 30px;
    box-sizing: border-box;
    font-size: 14px;
    /* margin-left: 10px; */
}
.calendarIcon
{
    width: 30px;
    height: 30px;
    margin-right: 10px;
}

.rightItem
{
    width: 30%;
    /* border: 1px solid red; */
    display: flex;
    justify-content: center;
    box-sizing: border-box;
    align-items: center;
    position: relative;
    margin-right: 15px;

}

.selectTimeContent
{

    background-color: #fff;
    width: 100%;
    box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.15);  

}


.selectTimeItem {
    width: 100%;
    font-size: 16px;
    height: 0; /* 将高度改为0，初始状态不显示 */
    align-items: center;
    box-sizing: border-box;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    position: absolute;
    /* z-index: 9999; */
    top: 40px; /* 初始状态下菜单栏与按钮间距 */
    /* visibility: hidden; */
    opacity: 0;
  }
  .show {
    height: auto; /* 将高度设为auto，以展开菜单项 */
    top: 45px; /* 展开后菜单栏与按钮间距 */
    /* visibility: visible; */
    opacity: 1;
    z-index: 9999;

  }


.selectTimeItem .content
{
    width: 100%;
    line-height: 44px;
    border-bottom: 1px solid rgb(236, 236, 236);
}

.content_text
{
    margin-left:15px;
}

.packAll
{
    background-color: rgba(0, 0, 0, 0.7);
    width: 100%;
    height: 100%;
    z-index: 999;
    position: absolute;
    top: 45px;
    
}

