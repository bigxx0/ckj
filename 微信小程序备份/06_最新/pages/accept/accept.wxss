}


.commit_agree{
    position: absolute;
    right:75px;
    bottom: 15px;
    text-align: center;
}
.commit_disagree{
    position: absolute;
    right: 10px;    
    bottom: 15px;
    text-align: center;
}
.commit_add{
    position: absolute;
    right:185px;
    bottom: 15px;
    text-align: center;
}
.commit_revoke{

    position: absolute;
    right: 118px;    
    bottom: 15px;
    text-align: center;
}
.commit_finished{
    position: absolute;
    right: 10px;
    bottom: 15px;
    
    
}
.commit_finish{
    width: 100px;
    height: 44px;
    /* background-color:rgb(165, 165, 165); */
    border: 2px solid rgba(7, 193, 96, 0.8);
    box-sizing: border-box;
    position: absolute;
    right: 10px;
    bottom: 15px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: rgb(7, 193, 96);
}

.commit_finish text{
    margin-right: 10px;
}

.standView{
    width: 100%;
    height: 50px;     /*  自定义一下需要的高度 */
    /* background-color: black; */
  }



  .danger{
    background: var(--button-danger-background-color,#ee0a24);
    color: var(--button-danger-color,#fff);
    -webkit-text-size-adjust: 100%;
    align-items: center;
    -webkit-appearance: none;
    display: inline-flex;
    font-size: var(--button-default-font-size,16px);
    height: var(--button-default-height,44px);
    justify-content: center;
    line-height: var(--button-line-height,20px);
    padding: 0;
    position: relative;
    text-align: center;
    vertical-align: middle;
    font-size: var(--button-normal-font-size,14px);
    padding: 0 15px;
  }

  .primary{
    background: var(--button-primary-background-color,#07c160);
    color: var(--button-danger-color,#fff);
    -webkit-text-size-adjust: 100%;
    align-items: center;
    -webkit-appearance: none;
    display: inline-flex;
    font-size: var(--button-default-font-size,16px);
    height: var(--button-default-height,44px);
    justify-content: center;
    line-height: var(--button-line-height,20px);
    padding: 0;
    position: relative;
    text-align: center;
    vertical-align: middle;
    font-size: var(--button-normal-font-size,14px);
    padding: 0 15px;
  }

  button {
    background-color: #f8f8f8;
    border-radius: 5px;
    box-sizing: border-box;
    color: #000;
    cursor: pointer;
    display: block;
    font-size: 18px;
    line-height: 2.55555556;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    padding-left: 14px;
    padding-right: 14px;
    position: relative;
    text-align: center;
    text-decoration: none;
}



