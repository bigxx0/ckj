.down_menu .information{
    margin-top: 10px;
    margin-left: 10px;
    font-size: 14px;
    font-weight: 550;
    /* border-bottom: 1px solid #dddddd; */
    line-height: 20px;
}

.down_menu view{
    /* border: 1px solid red; */
