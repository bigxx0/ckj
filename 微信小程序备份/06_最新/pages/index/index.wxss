page {
    background-color: #fff;
  }
    .user_info_wrap {
      width:100%;
      /* height: 550rpx; */
      height: 500rpx;
      overflow: hidden;
      background-image: linear-gradient(to bottom, #6eb2f7 0%, rgba(255,255,255,0) 100%);
      position: relative;    
    }
  .user_img_wrap {
      position: relative;
      width:100%;
      height:100%;
      /* background-color: yellow; */
    }
  .user_bg {
      /* height:550rpx; */
      width:100%;
      height: 500rpx;
      /* background-size: 100% 100%; */
      filter: blur(16rpx);
    }
  .user_info {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      top: 12%;
      text-align: center;
    }
  .user_icon {
      width: 290rpx;
      height: 290rpx;
      border-radius: 50%;
    }
  .user_name {
      color: black;
      margin-top: 55rpx;
      font-size: 38rpx;
    }
  
    /* 使得文字显示一行 */
    .user_info{
      width:100%;
    }
  
  
    .bottom{
      width: 95%;
      height: 200rpx;
      background-color:#fff;
      margin: 100rpx auto;
      display: flex;
      align-items: center;
      flex-wrap: wrap;
  
  }
  
  .item image{
      width: 80rpx;
      height: 80rpx;
  }
  
  .item{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 31.66666666666667%;
      height: 200rpx;
      border: 1px solid rgba(238, 238, 238,0.5);
  }
  .item text{
      margin-top: 10rpx;
  }
   