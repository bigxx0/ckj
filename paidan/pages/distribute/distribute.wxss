.content {
    padding: 15rpx 15rpx 0 15rpx;
    font-size: 30rpx;
    color: #808080;
  }
  
  .list-content {
    display: flex;
    justify-content: space-between;
    text-align: center;
    line-height: 60rpx;
    border-bottom: 1rpx solid #ddd;
  }
  
  .list-text {
    padding-top: 15rpx;
    text-indent: 40rpx;
    display: block;
  }
  
  .hidden-content {
    /* // 主要利用的是display:none实现隐藏 */
    display: none;
  }